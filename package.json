{
  "name": "poesearcher",
  "version": "0.3.2",
  "description": "A Chrome extension that automates item searching on the Path of Exile trade website by parsing item text and automatically filling in search filters.",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@crxjs/vite-plugin": "^2.2.0",
    "@types/chrome": "^0.1.12",
    "bestzip": "^2.2.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.6"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "build:force": "vite build --force",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "sync-version": "node scripts/sync-version.js",
    "prebuild": "npm run sync-version && npm run clean && npm run typecheck",
    "postinstall": "npm run build",
    "zip": "cd dist/poesearcher && bestzip ../../poesearcher.zip *",
    "package": "npm run build && npm run zip",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm run sync-version",
    "changeset:release": "npm run package",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milespop/poesearcher.git"
  },
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/milespop/poesearcher/issues"
  },
  "homepage": "https://github.com/milespop/poesearcher#readme"
}
