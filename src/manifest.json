{
  "manifest_version": 3,
  "name": "PoE2 Searcher",
  "version": "0.3.5",
  "description": "Paste POE items and search the trade site instantly",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.pathofexile.com/trade2/search/poe2/*"
      ],
      "js": [
        "src/modules/statMappings.js",
        "src/modules/itemParser.js",
        "src/modules/search-engine.js",
        "src/modules/interface_clean.js",
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon32.png"
      ],
      "matches": [
        "https://www.pathofexile.com/*"
      ]
    }
  ]
}
