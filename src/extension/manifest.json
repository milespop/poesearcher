{
  "manifest_version": 3,
  "name": "POE Searcher",
  "version": "1.0.1",
  "description": "Paste POE items and search the trade site instantly",

  "permissions": [
    "activeTab",
    "storage"
  ],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["*://www.pathofexile.com/trade2/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}